<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include('../partials/header') %>

    <div class="container mt-5">
      <h1>Login</h1>

      <% if (locals.error) { %>
      <div>
        <p><%= error %></p>
      </div>
      <% } %>

      <div class="row">
        <div class="col-sm-8">
          <div class="card">
            <div class="card-body">
              <a class="btn btn-block" href="/auth/google" role="button">
                <i
                  class="bi bi-google"
                  style="font-size: 1.5rem; color: cornflowerblue"
                ></i>
                Sign In with Google
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
